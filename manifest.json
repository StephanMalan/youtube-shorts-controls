{
    "manifest_version": 3,
    "name": "Youtube Shorts Controls",
    "description": "Dynamically add full playback controlls to Youtube Shorts",
    "version": "0.1.0",
    "action": {
        "default_title": "Youtube Shorts Controls",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts" : [
        {
            "matches": ["https://www.youtube.com/shorts/*"],
            "js": ["content-script.js"]
        }
    ]
}